<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Dark theme for night mode -->
    <style name="AppTheme" parent="Theme.AppCompat.DayNight.DarkActionBar">
        <!-- BD & Associates Brand Colors (Dark Mode) -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        
        <!-- Action Bar Styling -->
        <item name="actionBarStyle">@style/CustomActionBar</item>
        <item name="android:textColorPrimary">@color/colorOnPrimary</item>
        
        <!-- Status Bar -->
        <item name="android:statusBarColor">@color/statusBarColor</item>
        <item name="android:windowLightStatusBar">false</item>
        
        <!-- Dark background -->
        <item name="android:windowBackground">#121212</item>
    </style>

    <!-- Custom Action Bar Style for Dark Mode -->
    <style name="CustomActionBar" parent="Widget.AppCompat.ActionBar.Solid">
        <item name="background">@color/appBarBackground</item>
        <item name="titleTextStyle">@style/CustomActionBarTitle</item>
        <item name="android:elevation">4dp</item>
    </style>

    <!-- Custom Action Bar Title for Dark Mode -->
    <style name="CustomActionBarTitle" parent="TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textColor">@color/appBarText</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
    </style>

</resources>
