<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Base application theme with custom app bar -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- BD & Associates Brand Colors -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        
        <!-- Action Bar Styling -->
        <item name="actionBarStyle">@style/CustomActionBar</item>
        <item name="android:textColorPrimary">@color/colorOnPrimary</item>
        
        <!-- Status Bar -->
        <item name="android:statusBarColor">@color/statusBarColor</item>
        <item name="android:windowLightStatusBar">false</item>
        
        <!-- Background -->
        <item name="android:windowBackground">@color/backgroundColor</item>
    </style>

    <!-- Custom Action Bar Style -->
    <style name="CustomActionBar" parent="Widget.AppCompat.Light.ActionBar.Solid.Inverse">
        <item name="background">@color/appBarBackground</item>
        <item name="titleTextStyle">@style/CustomActionBarTitle</item>
        <item name="android:elevation">4dp</item>
    </style>

    <!-- Custom Action Bar Title -->
    <style name="CustomActionBarTitle" parent="TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textColor">@color/appBarText</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="AppTheme.NoActionBar" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:background">@null</item>
    </style>

    <style name="AppTheme.NoActionBarLaunch" parent="Theme.SplashScreen">
        <item name="android:background">@drawable/splash</item>
    </style>
</resources>